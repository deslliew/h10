{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Carbon Emission (tonnes) in Asia (2017 - 2021), Based on Categories",
  "width": "container",
  "height": 390,
  "data": {
    "url": "https://raw.githubusercontent.com/deslliew/dva2/main/categorties%20by%20year%20(donut).csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2021,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [{"filter": "datum.Year == Year_selection"}],
  "encoding": {
    "theta": {
      "field": "Percentage",
      "type": "quantitative",
      "stack": true,
      "sort": "descending"
    },
    "color": {
      "field": "Categories",
      "type": "nominal",
      "scale": {
        "domain": ["Coal", "Oil", "Gas", "Cement", "Flaring", "Others"],
        "range": [
          "#bc4b51",
          "#5b8e7d",
          "#ff6961",
          "#C3B1E1",
          "#f4e285",
          "#ADD8E6"
        ]
      }
    },
    "opacity": {
      "condition": {"test": "datum['Categories'] == 'Others'", "value": 1},
      "value": 0.5
    },
    "tooltip": [
      {"field": "Year", "type": "nominal"},
      {"field": "Categories", "type": "nominal"},
      {"field": "Percentage", "type": "quantitative", "format": ".2%"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 8,
        "y": 40,
        "fill": "black",
        "fontSize": 11,
        "text": "Coal has the highest CO2"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 8,
        "y": 50,
        "fill": "black",
        "fontSize": 11,
        "text": "emission rate among the"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 8,
        "y": 60,
        "fill": "black",
        "fontSize": 11,
        "text": "other material"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 8,
        "y": 70,
        "fill": "black",
        "fontSize": 11,
        "text": "categories."
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 400,
        "y": 300,
        "fill": "black",
        "fontSize": 11,
        "text": "Flaring has the lowest CO2"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 400,
        "y": 310,
        "fill": "black",
        "fontSize": 11,
        "text": "emission rate among the"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "x": 400,
        "y": 320,
        "fill": "black",
        "fontSize": 11,
        "text": "other material categories."
      }
    },
    {
      "mark": {
        "type": "arc",
        "innerRadius": 160,
        "outerRadius": 110,
        "stroke": "white",
        "strokeWidth": 2,
        "cursor": "pointer"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "outerRadius": 185,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Percentage",
          "type": "quantitative",
          "format": ".2%"
        },
        "opacity": {"value": 1}
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "value": [{"Categories": "Others"}],
          "select": {
            "type": "point",
            "fields": ["Categories"],
            "on": "mouseover"
          }
        }
      ],
      "mark": {
        "type": "arc",
        "align": "center",
        "innerRadius": 160,
        "outerRadius": 110,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "color": {
          "condition": {
            "param": "hover",
            "field": "Categories",
            "type": "nominal"
          },
          "value": "white"
        },
        "opacity": {"condition": {"param": "hover", "value": 0.5}, "value": 0.2}
      }
    }
  ],
  "config": {}
}
