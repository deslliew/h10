{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total CO2 Emissions (tonnes per Capita) in Asia (2017 - 2021)",
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "equirectangular",
    "scale": 390,
    "translate": [1000, 460],
    "center": [160, -10]
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2021,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deslliew/FIT3179/main/asia.topojson",
        "format": {"type": "topojson", "feature": "asia"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.name",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deslliew/FIT3179/main/test.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deslliew/dva2/main/output_new_map.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/deslliew/FIT3179/main/asia.topojson",
              "format": {"type": "topojson", "feature": "asia"}
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Per Capita",
          "type": "quantitative",
          "scale": {"domain": [0, 20], "scheme": "blues"},
          "legend": {"format": ".2s", "title": "Carbon Emission (tonnes)"}
        },
        "tooltip": [
          {"field": "Year", "type": "nominal", "title": "Year"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Per Capita",
            "type": "quantitative",
            "title": "Per Capita",
            "format": ","
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/deslliew/dva2/main/output_new_map.csv"
      },
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 14,
        "fontStyle": "italic"
      },
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Saudi Arabia' || datum['Country'] == 'Mongolia' || datum['Country'] == 'Korea'  || datum['Country'] == 'Kazakhstan'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}
